# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.md]
indent_style = space

[*.yml]
indent_style = space
indent_size = 2

[package.json]
indent_style = space
indent_size = 2
